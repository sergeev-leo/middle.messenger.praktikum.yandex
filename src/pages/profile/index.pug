doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Document

    link(rel="stylesheet" href="style.scss")
  body  
    .profile
      .profile__go-back-btn-section
        +iconButton(data.iconButton)
      .profile__content-section 
        .profile__user-avatar-section
          +avatar(data.avatar)
          h1 #{data.userName}
        ul.profile__user-data 
          each item in data.userData
            li.profile__user-data-row(class=item.id)
              p.label #{item.label}
              p.value #{item.value}
        .proifle__links-section 
          each item in data.links
            +link(item)