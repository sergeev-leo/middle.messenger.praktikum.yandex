doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Document

    link(rel="stylesheet" href="/static/css/font-awesome.min.css")
    link(rel="stylesheet" href="style.scss")
  body  
    .chat
      aside
        .chat__search-section
          .chat__profile-link
            +link(data.profileLink)
            i.icon.fa.fa-angle-right
          .chat_search-field
            input(type="search")
            .input-label
              i.icon.fa.fa-search
              p #{data.searchInput.placeholder} 
        .chat__dialogs-section
          each item in data.dialogs
            +dialog(item)

      .chat__content-section
        nav.chat__top-panel
          .chat__top-panel-user-avatar 
            +avatar(data.reviewingDialogUser.avatar)
            h1 #{data.reviewingDialogUser.name}
          .chat__top-panel-menu-icon 
            +menu(data.chatMenu)

        .chat__messages-panel 
          each item in data.messages
            if(typeof item === 'string')
              .date-string
                p #{item}
            else  
              +message(item)

        .chat__bottom-panel
          .chat__bottom-panel-attach-menu-icon 
            +menu(data.attachMenu)
          .chat__bottom-panel-message-field
            input(type="text" name="message" placeholder="Сообщение")
          .chat__bottom-panel-send-icon 
            +iconButton(data.sendIcon)