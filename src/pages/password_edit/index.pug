extends ../../components/html/html.pug

block includes
  include ../../components/link/link.pug
  include ../../components/avatar/avatar.pug
  include ../../components/input/input.pug
  include ../../components/button/button.pug
  include ../../components/goBackButtonPanel/goBackButtonPanel.pug

block data
  -
    const data = {
      avatar: {
        src:"../../../static/user.png", 
        title: 'Поменять аватар',
      },

      inputs: [
        {
          id: 'oldPassword', 
          label: 'Старый пароль', 
        },
        {
          id: 'newPassword', 
          label: 'Новый пароль', 
        },
        {
          id: 'repeatNewPassword', 
          label: 'Повторите пароль', 
        },
      ],
      button: {
        title: 'Сохранить', 
        style: 'primary',
      },

    };

block content 
  .password-edit
    +goBackButtonPanel
    .password-edit__content-section 
      .password-edit__user-avatar-section
        +avatar(data.avatar)
      ul.password-edit__user-data 
        each item in data.inputs
          li.password-edit__user-data-row(class=item.id)
            +input(item)
      .password-edit__btn-section 
        +button(data.button)
    