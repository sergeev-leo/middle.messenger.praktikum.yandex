include ../../components/link/link.pug
include ../../components/avatar/avatar.pug
include ../../components/input/input.pug
include ../../components/button/button.pug
include ../../components/iconButton/iconButton.pug

-
  const data = {
    iconButton: {
      iconName: 'fa-arrow-circle-o-left', 
      href: '/chat', 
      style: 'primary',
    },
    avatar: {
      src:"../../../static/user.png", 
      title: 'Поменять аватар', 
      href: '#',
    },

    inputs: [
      {
        id: 'old_password', 
        label: 'Старый пароль', 
      },
      {
        id: 'password', 
        label: 'Новый пароль', 
      },
      {
        id: 'repeat_password', 
        label: 'Повторите пароль', 
      },
    ],
    button: {
      title: 'Сохранить', 
      style: 'primary', 
      href: '../500/index.pug',
    },

  };

doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Document

    link(rel="stylesheet" href="style.scss")
  body  
    .password-edit
      .password-edit__go-back-btn-section
        +iconButton(data.iconButton)
      .password-edit__content-section 
        .password-edit__user-avatar-section
          +avatar(data.avatar)
        ul.password-edit__user-data 
          each item in data.inputs
            li.password-edit__user-data-row(class=item.id)
              +input(item)
        .password-edit__btn-section 
          +button(data.button)